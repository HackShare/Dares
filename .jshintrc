{
    "curly": true,      // Require {} for every new block or scope
    "eqeqeq": true,     // Require triple equals (===) for comparison
    "forin": false,     // This option requires all for in loops to filter object's items. 
                        // We can't use this since it is not working with Object.create( null )
    "freeze": true,     // This options prohibits overwriting prototypes of native objects.,
    "immed": true,      // Require immediate invocations to be wrapped in parens e.g. `(function () { } ());`
    "indent": 4,        // This option enforces specific tab width for your code
    "noarg": true,      // Prohibit use of `arguments.caller` and `arguments.callee`
    "noempty": true,    // This option warns when you have an empty block in your code.
    "nonew": true,      // This option prohibits the use of constructor functions for side-effects.
    "undef": true,      // Require all non-global variables to be declared (prevents global leaks)
    "unused": true,     // This option warns when you define and never use your variables.
    "strict": true,     // This option requires all functions to run in ECMAScript 5's strict mode.
    "eqnull": true,     // Tolerate use of `== null`
    "expr": true,       // This option suppresses warnings about the use of expressions where normally you would expect to see assignments or function calls.
    "node": true,       // Node.js
    "globals": {
        "after": true,
        "before": true,
        "beforeEach": true,
        "describe": true,
        "it": true
    }
}
